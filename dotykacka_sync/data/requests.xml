<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- OAuth: Refresh Token -->
        <record id="request_oauth_refresh_token" model="api_manager.request">
            <field name="name">Refresh Access Token</field>
            <field name="provider" ref="provider_dotykacka_oauth"/>
            <field name="method">post</field>
            <field name="url_path">/v2/signin/token</field>
            <field name="content_type">application/json</field>
        </record>

        <!-- API: Get Customers -->
        <record id="request_get_customers" model="api_manager.request">
            <field name="name">Get Customers</field>
            <field name="provider" ref="provider_dotykacka_api"/>
            <field name="method">get</field>
            <field name="url_path">/v2/clouds/{cloud_id}/customers</field>
            <field name="content_type">application/json</field>
        </record>

        <!-- API: Get Customer by ID -->
        <record id="request_get_customer" model="api_manager.request">
