<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Provider for OAuth token refresh -->
        <record id="provider_dotykacka_oauth" model="api_manager.provider">
            <field name="name">Dotykačka OAuth</field>
            <field name="internal_reference">DKSYNC_OAUTH</field>
            <field name="server_scheme">https</field>
            <field name="server_domain">api.dotykacka.cz</field>
            <field name="authentication_method">none</field>
        </record>

        <!-- Provider for Dotykačka API v2 (with Bearer token) -->
        <record id="provider_dotykacka_api" model="api_manager.provider">
            <field name="name">Dotykačka API v2</field>
            <field name="internal_reference">DKSYNC_API</field>
            <field name="server_scheme">https</field>
            <field name="server_domain">api.dotykacka.cz</field>
            <field name="authentication_method">bearer_token</field>
            <field name="dynamic_token">1</field>
        </record>

    </data>
</odoo>
