<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_dotykacka_config_form" model="ir.ui.view">
        <field name="name">dotykacka.config.form</field>
        <field name="model">dotykacka.config</field>
        <field name="arch" type="xml">
            <form string="Dotykačka Configuration">
                <header>
                    <button name="action_test_connection" type="object" string="Test Connection"
                            class="oe_highlight" invisible="not is_authenticated"/>
                    <button name="action_authorize_oauth" type="object" string="Authorize"
                            class="oe_highlight" invisible="is_authenticated"/>
                    <button name="action_refresh_token" type="object" string="Refresh Token"
                            invisible="not is_authenticated"/>
                    <button name="action_register_webhook" type="object" string="Register Webhook"
                            invisible="webhook_active or not is_authenticated"/>
                    <button name="action_unregister_webhook" type="object" string="Unregister Webhook"
                            invisible="not webhook_active"/>
                    <button name="action_sync_now" type="object" string="Sync Now"
                            class="oe_highlight" invisible="not is_authenticated"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sync_logs" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="sync_error_count" widget="statinfo" string="Errors"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="cloud_id" placeholder="Cloud ID..." required="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="is_authenticated" invisible="1"/>
                            <span class="badge badge-success" invisible="not is_authenticated">
                                <i class="fa fa-check"/> Authenticated
                            </span>
                            <span class="badge badge-warning" invisible="is_authenticated">
                                <i class="fa fa-exclamation-triangle"/> Not Authenticated
                            </span>
                            <field name="webhook_active" invisible="1"/>
                            <span class="badge badge-info" invisible="not webhook_active">
                                <i class="fa fa-rss"/> Webhook Active
                            </span>
                        </div>
                    </div>
                    <notebook>
                        <page string="OAuth Configuration" name="oauth">
                            <group>
                                <group string="OAuth Credentials">
                                    <field name="client_id" password="True" required="1"/>
                                    <field name="client_secret" password="True" required="1"/>
                                    <field name="redirect_uri" placeholder="Leave empty for auto-generated"/>
                                </group>
                                <group string="Current Token">
                                    <field name="oauth_id" readonly="1"/>
                                    <field name="is_authenticated" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="API Configuration" name="api">
                            <group>
                                <group string="API Settings">
                                    <field name="api_base_url" required="1"/>
                                    <field name="api_provider_id" readonly="1"/>
                                </group>
                                <group string="Rate Limiting">
                                    <field name="rate_limit_requests"/>
                                    <field name="rate_limit_period"/>
                                </group>
                            </group>
                        </page>
                        <page string="Webhook" name="webhook">
                            <group>
                                <group string="Webhook Configuration">
                                    <field name="webhook_url" readonly="1" widget="url"/>
                                    <field name="webhook_id" readonly="1"/>
                                    <field name="webhook_active" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Sync Settings" name="sync_settings">
                            <group>
                                <group string="Enable/Disable Sync">
                                    <field name="sync_customers"/>
                                    <field name="sync_products"/>
                                    <field name="sync_orders"/>
                                    <field name="order_status_filter" invisible="not sync_orders"/>
                                </group>
                                <group string="Default Settings">
                                    <field name="default_salesperson_id"/>
                                    <field name="default_warehouse_id"/>
                                    <field name="default_pricelist_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Sync Status" name="sync_status">
                            <group>
                                <group string="Last Sync">
                                    <field name="last_sync_date" readonly="1"/>
                                    <field name="last_sync_status" readonly="1"/>
                                </group>
                                <group string="Company">
                                    <field name="company_id" required="1" options="{'no_create': True}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_dotykacka_config_tree" model="ir.ui.view">
        <field name="name">dotykacka.config.tree</field>
        <field name="model">dotykacka.config</field>
        <field name="arch" type="xml">
            <tree string="Dotykačka Configurations">
                <field name="cloud_id"/>
                <field name="company_id"/>
                <field name="is_authenticated"/>
                <field name="webhook_active"/>
                <field name="last_sync_date"/>
                <field name="last_sync_status"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dotykacka_config_search" model="ir.ui.view">
        <field name="name">dotykacka.config.search</field>
        <field name="model">dotykacka.config</field>
        <field name="arch" type="xml">
            <search string="Dotykačka Configurations">
                <field name="cloud_id"/>
                <field name="company_id"/>
                <filter name="authenticated" string="Authenticated" domain="[('is_authenticated', '=', True)]"/>
                <filter name="webhook_active" string="Webhook Active" domain="[('webhook_active', '=', True)]"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                    <filter name="group_status" string="Sync Status" context="{'group_by': 'last_sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dotykacka_config" model="ir.actions.act_window">
        <field name="name">Dotykačka Configurations</field>
        <field name="res_model">dotykacka.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Dotykačka Configuration
            </p>
            <p>
                Configure your Dotykačka POS integration here.
            </p>
        </field>
    </record>

</odoo>
