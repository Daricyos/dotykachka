<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Sale Order Form -->
    <record id="view_order_form_dotykacka" model="ir.ui.view">
        <field name="name">sale.order.form.dotykacka</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="dotykacka_receipt_id" readonly="1" invisible="not dotykacka_receipt_id"/>
                <field name="dotykacka_order_number" readonly="1" invisible="not dotykacka_order_number"/>
                <field name="dotykacka_status" readonly="1" invisible="not dotykacka_status"/>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="inside">
                <group string="Dotykačka Integration" invisible="not dotykacka_receipt_id">
                    <field name="dotykacka_config_id" readonly="1"/>
                    <field name="dotykacka_sync_date" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Inherit Sale Order Tree -->
    <record id="view_order_tree_dotykacka" model="ir.ui.view">
        <field name="name">sale.order.tree.dotykacka</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="dotykacka_receipt_id" optional="hide"/>
                <field name="dotykacka_status" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Search View for Dotykačka Orders -->
    <record id="view_sales_order_filter_dotykacka" model="ir.ui.view">
        <field name="name">sale.order.search.dotykacka</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <separator/>
                <filter name="dotykacka_orders" string="Dotykačka Orders" domain="[('dotykacka_receipt_id', '!=', False)]"/>
                <filter name="dotykacka_on_site" string="On Site" domain="[('dotykacka_status', '=', 'on_site')]"/>
                <filter name="dotykacka_takeaway" string="Takeaway" domain="[('dotykacka_status', '=', 'takeaway')]"/>
            </xpath>
        </field>
    </record>

</odoo>
